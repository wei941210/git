        map.clear();
        map.put("list",list);
        model.setData(map);
        model.setResultCode(list.size()>0?"1":"2");
        model.setResultMsg("success");
        return model;
    }

    @ApiOperation( value = "品牌投放广告数量",notes = "按条件查询品牌投放广告数量" )
    @ApiImplicitParams({
            @ApiImplicitParam(name = "endTime", value = "截止时间", required = false, dataType = "String", paramType = "query"),
